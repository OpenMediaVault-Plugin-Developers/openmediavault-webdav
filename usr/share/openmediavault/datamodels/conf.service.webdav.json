{
    "type": "config",
    "id": "conf.service.webdav",
    "title": "WebDAV",
    "queryinfo": {
        "xpath": "/config/services/webdav",
        "iterable": false
    },
    "properties": {
        "enable": {
            "type": "boolean",
            "default": false
        },
        "sharedfolderref": {
            "type": "string",
            "oneOf": [
                {
                    "type": "string",
                    "format": "uuidv4"
                },
                {
                    "type": "string",
                    "maxLength": 0
                }
            ],
            "default": ""
        },
        "path": {
            "type": "string",
            "default": "webdav"
        },
        "userisolation": {
            "type": "boolean",
            "default": false
        },
        "auth": {
            "type": "boolean",
            "default": true
        },
        "grpname": {
            "type": "string",
            "default": "webdav-users"
        },
        "extraoptions": {
            "type": "string",
            "default": ""
        }
    }
}
